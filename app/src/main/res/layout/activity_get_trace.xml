<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.xttoday.bike2.GetTrace">


    <EditText
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:id="@+id/startPlace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:layout_x="81dp"
        android:layout_y="54dp" />
    <EditText
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:id="@+id/endPlace"
        android:layout_below="@+id/startPlace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="81dp"
        android:layout_y="153dp" />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="搜索路线"
        android:id="@+id/buttonShowTrace"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="196dp"
        android:layout_x="85dp"
        android:layout_y="284dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="起始点"
        android:id="@+id/startText"
        android:layout_x="5dp"
        android:layout_y="54dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="终点"
        android:id="@+id/endText"
        android:layout_x="10dp"
        android:layout_y="153dp" />

</AbsoluteLayout>
